// 2413. Smallest Even Multiple
// https://leetcode.com/problems/smallest-even-multiple/description/

class Solution 
{
    public int smallestEvenMultiple(int n) 
    {
        int ans = 0;
        int i = 1;
        while(true)
        {
            if(i % 2 == 0 && i % n == 0) 
            {
                ans = i;
                break;
            }
            i++;
        }
        return ans;
    }
}
